{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <h1 class="h4 mb-3 font-weight-normal">Добавление нового занятия<a class="float-right" href="{{ path('admin.lessons') }}">Вернуться к занятиям</a></h1>
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.name, {'label': 'Название занятия', 'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.trainerName, {'label': 'Имя фамилия треннера', 'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.description, {'label': 'Описание', 'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.add, {'label': 'Добавить занятие', 'attr': {'class': 'btn btn-primary w-100'}}) }}
        </div>
    {{ form_end(form) }}
{% endblock %}