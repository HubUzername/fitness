{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <h1 class="h4 mb-3 font-weight-normal">Активация аккаунта</h1>
    <div class="alert alert-secondary">Для завершения активации аккаунта, пожалуйста придумайте пароль</div>
    {% if error %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.password.first, {'label': 'Придумайте пароль', 'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.password.second, {'label': 'Повторите пароль', 'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.save, {'label': 'Сохранить', 'attr': {'class': 'btn btn-primary w-100'}}) }}
        </div>
    {{ form_end(form) }}
{% endblock %}
