{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <h1 class="h4 mb-3 font-weight-normal">Смена пароля аккаунта</h1>
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_row(form.password.first, {'label': 'Придумайте новый пароль', 'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.password.second, {'label': 'Повторите новый пароль', 'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.save, {'label': 'Сохранить настройки', 'attr': {'class': 'btn btn-primary w-100'}}) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
